<!-- Page content-->
<div class="container">
	<div class="text-center mt-5">
		<h1>Consultez les articles</h1>
		<br>
	</div>

	{% if session.notification %}
		<div class="row">
			<div class="col-12">
				<div class="alert alert-{{ session.notification.result }}" role="alert">
					{{ session.notification.message }}
				</div>
			</div>
		</div>
	{% endif %}

	<div class="row">
		{% for articles in listeArticles %}
			<div class="col-6 mb-4">
				<div class="card">
					<img src="img/{{ articles.getId }}.jpg" style="max-width: 200px;" class="card-img-top" alt="{{ articles.getTitre }}">
					<div class="card-body">
						<h5 class="card-title">{{ articles.getTitre }}</h5>
						<p class="card-text">{{ articles.getTexte }}</p>
						<a href="#" class="btn btn-primary">{{ articles.getDate }}</a>
						<a href="articles.php?id={{ articles.getId }}" class="btn btn-secondary">Modifier</a>
						<br>
						<form id="commentairesForm" method="POST" action="index.php" enctype="multipart/form-data">
							<div class="mb-3">
								<div class="row">
									<div class="col-8">
										<label for="pseudo" class="form-label">Pseudo</label>
										<input type="text" name="pseudo" class="form-control" id="pseudo" required>
									</div>
								</div>
							</div>
							<div class="mb-3">
								<div class="row">
									<div class="col-8">
										<label for="email" class="form-label">Email</label>
										<input type="email" class="form-control" name="email" id="email">
									</div>
								</div>
							</div>
							<label for="texte" class="form-label">Commentaire</label>
							<textarea class="form-control" id="texte" name="texte" placeholder="Tapez votre commentaire ici..." rows="3"></textarea>
							<br>
							<button type="submit" name="submit" class="btn btn-primary" value="aaa">Envoyer mon commentaire</button>
						</form>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

	<div class="col-12">
		<nav aria-label="page de navigation mt-5">
			<ul class="pagination justify-content-center">
				{% for i in 1..nbPages %}
					<li class="page-item {% if page == i %}
																																																																													                        {{ 'active' }}
																																																																													                        {% endif %}">
						<a class="page-link" href="?page={{ i }}">
							{{ i }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</nav>
	</div>
